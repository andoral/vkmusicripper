<Window x:Class="VKMusicRipper.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:VKMusicRipper"
        mc:Ignorable="d"
        Title="MainWindow" Height="170" Width="176"
        ResizeMode="NoResize">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="100"></RowDefinition>
            <RowDefinition Height="auto"></RowDefinition>
        </Grid.RowDefinitions>
        <TextBlock Grid.Row="0" Grid.Column="1" HorizontalAlignment="Center">Логин</TextBlock>
        <TextBox Name="tbLogin" Grid.Column="1" Grid.Row="0" HorizontalAlignment="Center" Width="140" Height="20" Margin="0 -50 0 0"></TextBox>
        <TextBlock Grid.Row="0" Grid.Column="1" HorizontalAlignment="Center" Margin="0 55 0 0">Пароль</TextBlock>
        <TextBox Name="tbPass" Grid.Column="1" Grid.Row="0" HorizontalAlignment="Center" Margin="0 60 0 0 " Width="140" Height="20"></TextBox>
        <Button Name="btnLogin" Grid.Row="1" Grid.Column="1" Width="140">Войти</Button>
    </Grid>
</Window>
